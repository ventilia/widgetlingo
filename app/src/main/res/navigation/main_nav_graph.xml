<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/fragment1">

    <fragment
        android:id="@+id/fragment1"
        android:name="com.example.widgetlingo.Fragment1"
        android:label="Fragment1"
        tools:layout="@layout/fragment1">
        <action
            android:id="@+id/action_fragment1_to_fragment2"
            app:destination="@id/fragment2" />
    </fragment>

    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.widgetlingo.Fragment2"
        android:label="Fragment2"
        tools:layout="@layout/fragment2">
        <action
            android:id="@+id/action_fragment2_to_fragment3"
            app:destination="@id/fragment3" />
    </fragment>

    <fragment
        android:id="@+id/fragment3"
        android:name="com.example.widgetlingo.Fragment3"
        android:label="Fragment3"
        tools:layout="@layout/fragment3">
        <action
            android:id="@+id/action_fragment3_to_fragment4"
            app:destination="@id/fragment4" />
    </fragment>

    <fragment
        android:id="@+id/fragment4"
        android:name="com.example.widgetlingo.Fragment4"
        android:label="Fragment4"
        tools:layout="@layout/fragment4">
        <action
            android:id="@+id/action_fragment4_to_fragment5"
            app:destination="@id/fragment5" />
    </fragment>

    <fragment
        android:id="@+id/fragment5"
        android:name="com.example.widgetlingo.Fragment5"
        android:label="Fragment5"
        tools:layout="@layout/fragment5" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.widgetlingo.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigationFragment"
        android:name="com.example.widgetlingo.NavigationFragment"
        android:label="Navigation"
        tools:layout="@layout/fragment_navigation" />

</navigation>